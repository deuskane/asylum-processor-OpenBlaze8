#=============================================================================
# Variables
#=============================================================================
include mk/defs.mk
include mk/targets.mk

#=============================================================================
# Rules
#=============================================================================

run	: $(addprefix run_,$(TARGETS))

.PHONY	: run

run_%	:
	@echo "[$*]"
	fusesoc run --build-root build-$* --run --target $* $(CORE)

.PHONY	: run_%

clean	:
	rm -fr build build-*

.PHONY	: clean
